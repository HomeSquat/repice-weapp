/* component/item/index.wxss */

.find--item {
  position: relative;
  width: 690rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  padding: 48rpx 30rpx 30rpx 30rpx;
  border-radius: 10rpx;
  color: #fff;
  overflow: hidden;
}

.find--item__bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
  width: 690rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.find--item__mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 690rpx;
  height: 300rpx;
  background: rgba(0, 0, 0, 0.5);
}

.find--item__title {
  text-align: center;
  letter-spacing: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.find--item__des {
  margin-top: 30rpx;
  font-size: 26rpx;
}

.find--item__user {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
}

.find--item__user_avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.find--item__user_name {
  margin-left: 8rpx;
  font-size: 22rpx;
}
