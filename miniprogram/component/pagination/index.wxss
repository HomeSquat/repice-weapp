/* component/pagination/index.wxss */

.paginationBox {
  visibility: hidden;
  display: none;
}

.paginationBox.show {
  visibility: visible;
  display: block;
}

.paginationBox.show .pagination {
  opacity: 1;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  opacity: 0;
  transition: all 3s;
}

.pagination--text {
  padding: 0 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.pagination--line {
  width: 50rpx;
  height: 1rpx;
  background: #ccc;
}
