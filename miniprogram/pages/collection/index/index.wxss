/* miniprogram/pages/collection/index/index.wxss */

page {
  height: 100%;
}

.collection {
  height: 100%;
}

.tabs {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.tabs--item {
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}

.tabs--item__text {
  position: relative;
  display: inline-block;
  height: 100%;
}

.tabs--item__text.active {
  color: #61bfad;
}

.tabs--item__text.active::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 6rpx;
  border-radius: 3rpx;
  background: #61bfad;
}

.content {
  box-sizing: border-box;
  height: 100%;
  padding-top: 80rpx;
}

.content--item {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper--item__content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 830rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 15rpx 2rpx rgba(0, 0, 0, .2);
  overflow: hidden;
  transition: all 0.3s;
}

.swiper--item__content.active {
  width: 560rpx;
  height: 945rpx;
}


.swiperItem--image{
  width: 100%;
  height: 300rpx;
  transition: all .3s;
}
.swiper--item__content.active .swiperItem--image{
  height: 400rpx;
}

.swiperItem--bottom{
  padding: 30rpx;
}
.swiperItem--title{
  margin: 10rpx 0;
  text-align: center;
  font-size: 32rpx;
  letter-spacing: 8rpx;
  color: #61bfad;
}
.swiperItem--des{
  margin-bottom: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
}

.swiperItem--info__item{
  line-height: 44rpx;
  font-size: 26rpx;
}
.swiperItem--info__item .label{
  color: #61bfad;
}

.swiperItem--user{
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
}
.swiperItem--user__avatar{
  width: 50rpx;
  height: 50rpx;
  margin-right: 8rpx;
  border-radius: 50rpx;
}
.swiperItem--user__name{
  font-size: 20rpx;
  color: #61bfad;
}